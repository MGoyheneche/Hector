= form_for @dropzone do |f|
  - if @dropzone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dropzone.errors.count, "error")} prohibited this dropzone from being saved:"
      %ul
        - @dropzone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
